<h1>Editing garden</h1>

<% form_for(@garden) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :scene_id %><br />
    <%= f.text_field :scene_id %>
  </p>
  <p>
    <%= f.label :owner_id %><br />
    <%= f.text_field :owner_id %>
  </p>
  <p>
    <%= f.label :creator_id %><br />
    <%= f.text_field :creator_id %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @garden %> |
