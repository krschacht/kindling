<% faq_pairs.each_index do |i| %>
  <div class="qa_pair" id="qa_pair_<%= i %>">
    <li id="question_<%= i %>">
      <a name="question_<%= i %>"></a>
      <%= link_to @faq_pairs[i][:question], "#", 
            :class => "question disabled",
            :onclick => "show_answer( #{i} ); return false;" %>
    </li>
    <div class="answer <%= 'hidden' unless i == @default_question_id %>" id="answer_<%= i %>">
      <%= faq_pairs[i][:answer] %>
    </div>
  </div>
<% end %>
