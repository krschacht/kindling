<div class="tabs clearfix">
  <ul class="left_tabs">
    <%=
      # Tabs must be declared inside a single
      # rails tag like this because we the CSS
      # breaks if there is any whitespace between
      # the html tags. Not sure why...

      tab(  "Discussion",
            :controller => :forums,
            :action     => :index,
            :selected   => @forums_tab,
            :first      => true  ) +

      tab(  "FAQ Help",
            :href       => "/faq",
            :selected   => @faq_tab,
            :first      => true  )
    %>
  </ul>
  <ul class="right_tabs">
  </ul>
</div> <!-- tabs -->
