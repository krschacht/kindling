
<div class="wallkit_post <%= "#{post.author.admin_level_name}_post" if post.author.moderator? %> user_<%= post.author.id %>">
  <div class="wallkit_profilepic">
    <!-- put user avatar here -->
  </div>
  <div class="wallkit_postcontent">
    <h4>
      <%= full_name_linked post.author %>

      <%= "<b>(a moderator)</b>" if post.author.moderator? %>
      | <%= time_ago_in_words( post.created_at ) %> ago
        <span class="edit_links">| <%= link_to "edit", post_url( post.id ), :target => '_top' %></span>
    </h4>
    <div class="body">
      <%= auto_link( h( post.body ).
          gsub(/\n/, '<br>').
          gsub(/\[spoiler\](.*?)\[\/spoiler\]/, "<span class='spoiler'>\\1</span>").
          gsub(/\[b\](.*?)\[\/b\]/, "<b>\\1</b>").
          gsub(/\[i\](.*?)\[\/i\]/, "<i>\\1</i>").
          gsub(/\[u\](.*?)\[\/u\]/, "<u>\\1</u>").
          gsub( /http:\/\/65\.74\.185\.6/, 'http://theenchantedisland.com' ).
          gsub(/\?last_post_at=\d+/, "") , :all ) %>
    </div>

    <div class="browser_info">
      <%= post.browser %>
    </div>

    <div class="wallkit_actionset">
      <!-- links beneath the post go here -->
    </div>
  </div>
  <div class="stretcher"></div>
</div>

