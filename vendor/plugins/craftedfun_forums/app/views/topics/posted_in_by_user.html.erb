<%= render :partial => 'topics/options_header_by_user' %>

<div class="full_column">
  
  <div class="title_container">
    All topics
    <%= (@user == current_user) ? "you" : @user.full_name %>
    posted in
  </div>
  
  <div class="module_on_white topic_list">

    <div id="topics"> 
      <% @topics.each do |topic| %>
        <%= render :partial => 'topics/topic', 
                   :object  => topic %>

      <% end %>
    </div>
    
    <% if @topics.size == 0 %>
    <div class="section_title centered">
      <%= @user.full_name %> has not posted in any topics
    </div>
    <% end %>
  </div>

  <%= will_paginate( @topics ) %>
</div>
