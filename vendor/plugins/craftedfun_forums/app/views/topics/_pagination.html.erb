<div class="pagination <%= 'hidden' unless total_pages > 0 %>">
  
  <a  href="javascript:;" 
      onclick="posts_paginate.previous_page();"
      class="previous_page">
      « Previous
  </a>&nbsp;
  
  <% ( 0..total_pages ).to_a.each do |i| %>

    <%= posts_page_link( i ) %>

  <% end %>

  <a  href="javascript:;" 
      onclick="posts_paginate.next_page();"
      class="next_page">
      Next »
  </a>
  
</div>

